# scripts/daily_tao_to_discord.py

import os
import requests
from datetime import datetime, timezone

DISCORD_WEBHOOK_URL = os.environ["DISCORD_WEBHOOK_URL"]

def main():
    now = datetime.now(timezone.utc).strftime("%Y-%m-%d")
    content = (
        f"ðŸ“Š Daily TAO Earnings â€” {now}\n"
        f"(Placeholder message from GitHub Actions â€” TAO API wiring comes next.)"
    )
    resp = requests.post(DISCORD_WEBHOOK_URL, json={"content": content})
    resp.raise_for_status()
    print("âœ… Message sent:", resp.status_code)

if __name__ == "__main__":
    main()
